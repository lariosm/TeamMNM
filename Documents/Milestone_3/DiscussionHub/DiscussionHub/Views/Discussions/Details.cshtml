@model DiscussionHub.Models.Discussion

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>

<hr />

<div class="col-sm-12">
    <div class="dropdown float-right">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Options
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            @Html.ActionLink("Edit thread", "Edit", new { id = Model.ID }, new { @class = "dropdown-item" })
            @Html.ActionLink("Delete thread", "Delete", new { id = Model.ID }, new { @class = "dropdown-item" })
        </div>
    </div>
    @Html.ActionLink("Return to index", "Index", "Discussions", null, new { @class = "btn btn-secondary float-right", style = "margin-right: 5px;" })
</div>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.URL)
        </dt>

        <dd>
            <a href="@Model.URL" target="_blank">@Html.DisplayFor(model => model.URL)</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>