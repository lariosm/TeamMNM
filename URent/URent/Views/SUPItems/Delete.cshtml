@model URent.Models.SUPItem

@{
    ViewBag.Title = "Delete";
}
@if (Request.IsAuthenticated)
{
    Layout = "~/Views/Shared/_UserPageLayout.cshtml";
}

<h2>Delete listing</h2>

<h3>Are you sure you want to delete this listing?</h3>
<div>
    <h6 style="color:red">This action cannot be undone!</h6>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Item name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Item location
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SUPUser.CityAddress),
            @Html.DisplayFor(model => model.SUPUser.StateAddress)
        </dd>

        <dt>
            Daily rate
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DailyPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsAvailable)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsAvailable)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Confirm delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Details", new { id = Model.Id }, new { @class = "btn btn-outline-secondary"})
        </div>
    }
</div>
