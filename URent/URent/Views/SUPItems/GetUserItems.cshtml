@model IEnumerable<URent.Models.SUPItem>

@{
    ViewBag.Title = "My item listings";
    Layout = "~/Views/Shared/_UserPageLayout.cshtml";
}

<h2>My item listings</h2>
<br />

<table class="table">
    <tr>
        <th>
            Item name
        </th>
        <th>
            Daily rate ($/day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAvailable)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.ItemName, "Details", "SUPItems", new { id = item.Id }, null)
            </td>
            <td>
                @String.Format("{0:C}", item.DailyPrice)
            </td>
            @if(item.IsAvailable)
            {
                <td style="color:green">Available</td>
            }
            else
            {
                <td style="color:red">Not available</td>
            }
        </tr>
    }
</table>