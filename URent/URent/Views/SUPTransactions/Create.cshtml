@model URent.Models.SUPTransaction

@{
    ViewBag.Title = "Create";
}

@if (Request.IsAuthenticated)
{
    Layout = "~/Views/Shared/_UserPageLayout.cshtml";
}

<h2>Rent this Item</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div actions="/SUPTranctions/Create" class="form-horizontal" method="POST">
        <h4>SUPTransaction</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div id="price" data-price="@ViewBag.dailyprice"></div>
        <div>
            <p>
                Date From :
                <input class="form-group" type="text" id="StartDate" name="StartDate" />
            </p>
            <p>
                Date To :
                <input class="form-group" type="text" id="EndDate" name="EndDate" />
            </p>
            <div id="TextBox3" typeof="hidden" val=""></div>

            <span>
                Total Price : <input class="form-group" id="TotalPrice" name="TotalPrice" type="text" value="" readonly="readonly" />
            </span>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqueryui")
    @Scripts.Render("~/Scripts/Calendar.js")
    @Scripts.Render("~/Scripts/transactionPriceCalculator.js")
}
