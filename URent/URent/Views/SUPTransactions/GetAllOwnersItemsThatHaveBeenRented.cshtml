@model IEnumerable<URent.Models.SUPTransaction>

@{
    ViewBag.Title = "My Item Rental History";
    Layout = "~/Views/Shared/_UserPageLayout.cshtml";
}

<h2>My Item Rental History</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SUPItem.ItemName)
        </th>
        <th>
            Renter name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeStamp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SUPItem.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SUPUser.FirstName)
            @Html.DisplayFor(modelItem => item.SUPUser.LastName)
        </td>
        <td>
            @String.Format("{0:MM/dd/yyyy}", item.StartDate)
        </td>
        <td>
            @String.Format("{0:MM/dd/yyyy}", item.EndDate)
        </td>
        <td>
            @String.Format("{0:MM/dd/yyyy}", item.TimeStamp)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>*@
    </tr>
}

</table>
