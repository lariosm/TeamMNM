@model URent.Models.ProfileViewModel

@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.sUPUser.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sUPUser.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.sUPUser.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sUPUser.LastName)
        </dd>
    </dl>
</div>


@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.sUPUserReviews, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.sUPUserReviews, new
       {
           @class = "form-control",
           @rows = 10,
           @placeholder = "Review this user..."
       })
            @Html.ValidationMessageFor(model => model.sUPUserReviews, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit Review" class="btn btn-primary" />
        </div>
    </div>
}
