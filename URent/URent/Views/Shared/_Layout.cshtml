<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#4c0893" />
    <link rel="icon" type="image/x-icon" sizes="32x32" href="~/Content/Img/favicon.ico">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

</head>
<body>
    <!-- First-row navbar -->
    <nav class="navbar navbar-expand-md navbar-dark bg-custom">
        <!-- Logo and hamburger icon placement -->
        <div class="d-flex flex-grow-1">
            <span class="w-100 d-md-none d-block"><!-- hidden spacer to center brand on mobile --></span>
            <a class="navbar-brand" href="/Home/Index">
                <img src="~/Content/Img/urentlogo.svg" width="120" height="34" alt="URent" />
            </a>
            <!-- Hamburger menu icon (appears on screens <768px wide) -->
            <div class="w-100 text-right">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
        <!-- Search bar -->
        <div class="collapse navbar-collapse nav navbar-nav" id="navbar">
            <div class="input-group" id="searchbar">
                <form class="input-group" action="/SUPItems/Search" method="get">
                    <input type="text" name="query" id="searchinput" class="form-control" placeholder="Search for an item" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-outline-warning search-btn-outline" id="searchbutton" type="submit"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
        </div>
        <!-- Language dropdown menu -->
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Language
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">English</a>
                        <a class="dropdown-item" href="#">Spanish (coming soon)</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Second-row navbar -->
    <nav class="navbar navbar-expand-md bg-custom navbar-dark">
        <div class="navbar-collapse collapse" id="navbar">
            <ul class="navbar-nav">
                <li class="nav-item" id="location">
                    <a class="nav-link" id="currentloc" href="#"><i class="fa fa-map-marker"></i> Set location</a>
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="body-content">
        @RenderBody()
    </div>

    <footer class="container-fluid">
        <p>&copy; @DateTime.Now.Year - MNM Solutions</p>
    </footer>

    @Scripts.Render("~/bundles/jsessentials")
    @Scripts.Render("~/Scripts/location.min.js")
    @RenderSection("Scripts", required: false)
</body>
</html>
