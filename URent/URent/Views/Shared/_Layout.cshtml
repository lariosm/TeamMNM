<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - URent</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Scripts.Render("~/Scripts/modernizer-2.8.3.js")
    @Styles.Render("~/Scripts/dropzone/dropzone.css")
    @Scripts.Render("~/Scripts/dropzone/dropzone.js")

</head>
<body>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-custom">
        <a class="navbar-brand" href="/Home/Index">
            <img src="~/Content/Img/urent_logo.svg" width="120" height="32" alt="URent" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbar">
            <div class="row col-sm-12">
                <div class="col-sm-2">
                    <!--Empty for now-->
                </div>
                <!-- Search bar -->
                <div class="col-sm-8">
                    <form class="form-inline mx-auto">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search coming soon..." aria-label="Search" disabled>
                            <div class="input-group-append">
                                <button class="btn btn-outline-warning" type="button"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- Language selection dropdown -->
                <div class="col-sm-2">
                    <a class="nav-link dropdown-toggle" style="color:white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Language
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown" id="locationdd">
                        <a class="dropdown-item" href="#">English</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Spanish coming soon...</a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <nav class="navbar navbar-expand-md bg-custom navbar-dark">
        <div class="navbar-collapse collapse pt-2 pt-md-0" id="navbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Location info coming soon...</a>
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - MNM Solutions</p>
        </footer>
    </div>

    @Scripts.Render("~/Scripts/jquery-3.3.1.js")
    @Scripts.Render("~/Scripts/bootstrap.bundle.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
